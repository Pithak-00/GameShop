@model Platform

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">プラットフォーム削除</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<input asp-for="Id" hidden />
			<div class="border p-3 mt-4">
				<!--<div asp-validation-summary="All"></div>-->
				<div class="form-floating py-3 col-12">
					<label asp-for="Name" class="ms-2">プラットフォーム名</label>
					<input asp-for="Name" disabled class="form-control border-0 shadow" />
				</div>
				<div class="form-floating py-3 col-12">
					<label asp-for="DisplayOrder" class="ms-2">表示順</label>
					<input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
				</div>

				<div class="row pt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control">Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Platform" asp-action="Index" class="btn btn-secondary border form-control">一覧に戻る</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

