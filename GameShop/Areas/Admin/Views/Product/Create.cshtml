@model ProductVM

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Create Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" class="row" enctype="multipart/form-data">
			<div class="border p-3 mt-4">
				<!--<div asp-validation-summary="All"></div>-->
				<div class="form-floating py-3 col-12">
					<label asp-for="Product.Title" class="ms-2"></label>
					<input asp-for="Product.Title" class="form-control border-0 shadow" />
					<span asp-validation-for="Product.Title" class="text-danger"></span>
				</div>
				<div class="form-floating py-3 col-12">
					<label asp-for="Product.Brand" class="ms-2"></label>
					<input asp-for="Product.Brand" class="form-control border-0 shadow" />
					<span asp-validation-for="Product.Brand" class="text-danger"></span>
				</div>
				<div class="form-floating py-3 col-12">
					<label asp-for="Product.ListPrice" class="ms-2"></label>
					<input asp-for="Product.ListPrice" class="form-control border-0 shadow" />
					<span asp-validation-for="Product.ListPrice" class="text-danger"></span>
				</div>
				<div class="form-floating py-3 col-12">
					<label asp-for="Product.Price" class="ms-2"></label>
					<input asp-for="Product.Price" class="form-control border-0 shadow" />
					<span asp-validation-for="Product.Price" class="text-danger"></span>
				</div>
				<div class="form-floating py-3 col-12">
					<label asp-for="Product.Price50" class="ms-2"></label>
					<input asp-for="Product.Price50" class="form-control border-0 shadow" />
					<span asp-validation-for="Product.Price50" class="text-danger"></span>
				</div>
				<div class="form-floating py-3 col-12">
					<label asp-for="Product.Price100" class="ms-2"></label>
					<input asp-for="Product.Price100" class="form-control border-0 shadow" />
					<span asp-validation-for="Product.Price100" class="text-danger"></span>
				</div>
				<div class="form-floating py-3 col-12">
					<label asp-for="Product.Description" class="ms-2"></label>
					<textarea asp-for="Product.Description" class="form-control border-0 shadow"></textarea>
					<span asp-validation-for="Product.Description" class="text-danger"></span>
				</div>
				<div class="form-floating py-3 col-12">
					<label asp-for="Product.PlatformId" class="ms-2"></label>
					<select asp-for="@Model.Product.PlatformId" asp-items="@Model.PlatformList" class="form-select border-0 shadow">
						<option disabled selected>--Select Platform--</option>
					</select>
					<span asp-validation-for="Product.PlatformId" class="text-danger"></span>
				</div>
				<div class="form-floating py-3 col-12">
					<label asp-for="Product.ImageUrl" class="ms-2"></label>
					<input type="file" class="form-control border-0 shadow" />
				</div>

				<div class="row pt-3">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Create</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>



@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}