@model Product

<form method="post">
	<div class="card shadow border-0 mt-4">
		<div class="card-header bg-secondary bg-gradient ml-0 py-4">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="text-white text-uppercase">@Model.Title</h2>
					<p class="text-white-50 fw-semibold mb-0">by @Model.Brand</p>
				</div>
			</div>
		</div>
		<div class="card-body">
			<div class="py-3">
				<div class="row pb-3">
					<div class="col-12 text-end">
						<a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
							<small>Back to home</small>
						</a>
					</div>
				</div>

				<div class="row">
					<div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
						<img src="@Model.ImageUrl" width="100%" class="rounded" />
					</div>
					<div class="col-12 col-lg-6 offset-lg-1">
						<div class="col-12 col-md-6 pb-4">
							<span class="badge">@Model.Platform.Name</span>
						</div>
						<div class="row ps-2">
							<h6 class="text-opacity-50 pb-2">
								List Price:
								<span class="text-decoration-line-through">
									@Model.ListPrice.ToString("c")
								</span>
							</h6>
						</div>

						<div class="row text-center ps-2">
							<div class="p-1 col-3 col-lg-2 border-bottom">
								<div class="text-opacity-50 fw-semibold">Quantity</div>
							</div>
							<div class="p-1 col-3 col-lg-2 border-bottom">
								<div class="text-opacity-50 fw-semibold">1-50</div>
							</div>
							<div class="p-1 col-3 col-lg-2 border-bottom">
								<div class="text-opacity-50 fw-semibold">51-100</div>
							</div>
							<div class="p-1 col-3 col-lg-2 border-bottom">
								<div class="text-opacity-50 fw-semibold">100+</div>
							</div>
						</div>

						<div class="row text-center ps-2">
							<div class="p-1 col-3 col-lg-2 text-warning fw-bold">
								<div>Price</div>
							</div>
							<div class="p-1 col-3 col-lg-2 text-warning fw-bold">
								<div>@Model.Price.ToString("c")</div>
							</div>
							<div class="p-1 col-3 col-lg-2 text-warning fw-bold">
								<div>@Model.Price50.ToString("c")</div>
							</div>
							<div class="p-1 col-3 col-lg-2 text-warning fw-bold">
								<div>@Model.Price100.ToString("c")</div>
							</div>
						</div>

						<div class="row pl-2 my-3">
							<p class="text-secondary lh-sm">@Html.Raw(Model.Description)</p>
						</div>

					</div>
				</div>

			</div>
		</div>
	</div>
</form>