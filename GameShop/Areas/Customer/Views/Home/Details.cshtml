@model ShoppingCart

<form method="post">
	<input hidden asp-for="ProductId" />
	<div class="card shadow border-0 mt-4">
		<div class="card-header bg-secondary bg-gradient ml-0 py-4">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="text-white text-uppercase">@Model.Product.Title</h2>
					<p class="text-white-50 fw-semibold mb-0">@Model.Product.Brand</p>
				</div>
			</div>
		</div>
		<div class="card-body">
			<div class="py-3">
				<div class="row pb-3">
					<div class="col-12 text-end">
						<a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
							<small>ホームに戻る</small>
						</a>
					</div>
				</div>

				<div class="row">
					<div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
						<img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
					</div>
					<div class="col-12 col-lg-6 offset-lg-1">
						<div class="col-12 col-md-6 pb-4">
							<span class="badge">@Model.Product.Platform.Name</span>
						</div>
						<div class="row ps-2">
							<h6 class="text-opacity-50 pb-2">
								価格:
								<span class="text-decoration-line-through">
									@Model.Product.ListPrice.ToString() 円
								</span>
							</h6>
						</div>

						<div class="row text-center ps-2">
							<div class="p-1 col-3 col-lg-2 border-bottom">
								<div class="text-opacity-50 fw-semibold">数量</div>
							</div>
							<div class="p-1 col-3 col-lg-2 border-bottom">
								<div class="text-opacity-50 fw-semibold">1-50</div>
							</div>
							<div class="p-1 col-3 col-lg-2 border-bottom">
								<div class="text-opacity-50 fw-semibold">51-100</div>
							</div>
							<div class="p-1 col-3 col-lg-2 border-bottom">
								<div class="text-opacity-50 fw-semibold">100+</div>
							</div>
						</div>

						<div class="row text-center ps-2">
							<div class="p-1 col-3 col-lg-2 text-warning fw-bold">
								<div>価格</div>
							</div>
							<div class="p-1 col-3 col-lg-2 text-warning fw-bold">
								<div>@Model.Product.Price.ToString() 円</div>
							</div>
							<div class="p-1 col-3 col-lg-2 text-warning fw-bold">
								<div>@Model.Product.Price50.ToString() 円</div>
							</div>
							<div class="p-1 col-3 col-lg-2 text-warning fw-bold">
								<div>@Model.Product.Price100.ToString() 円</div>
							</div>
						</div>

						<div class="row pl-2 my-3">
							<p class="text-secondary lh-sm">@Html.Raw(Model.Product.Description)</p>
						</div>

						<div class="row pl-2 mb-3">
							<div class="col-md-4">
								<div class="input-group mb-3">
									<span class="input-group-text bg-primary text-white border-0 fw-semibold"
									id="inputGroup-sizing-default">
										数
									</span>
									<input asp-for="Count" type="number" value="1" class="form-control text-end"
									aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
								</div>
							</div>
						</div>

						<div class="raw">
							<div class="col-12 col-md-6 pb-1">
								<button type="submit"
										class="btn btn-primary bg-gradient w-100 py-2 text-uppercase fw-semibold">
									カートに入れる
								</button>
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
</form>